{
    "extends": ["react-app", "plugin:prettier/recommended"],
    "plugins": ["prettier", "react"],
    "rules": {
        "prettier/prettier": [
            "warn",
            { "singleQuote": true, "tabWidth": 4, "semi": false }
        ],
        "no-unused-vars": [
            "warn",
            { "vars": "all", "args": "after-used", "ignoreRestSiblings": false }
        ]
    },
    "settings": {
        "react": {
            "version": "detect"
        }
    }
}
